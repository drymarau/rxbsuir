<resources>

    <style name="AppTheme.Light" parent="AppThemeBase">
        <item name="cardBackground">@drawable/card_background</item>
    </style>

    <style name="AppTheme.Drawer.Light" parent="AppTheme.Light">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.Dark" parent="AppThemeBaseDark">
        <item name="cardBackground">@drawable/card_background</item>
    </style>


    <style name="AppTheme.Drawer.Dark" parent="AppTheme.Dark">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>
