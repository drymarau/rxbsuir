<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidElementNotAllowed -->
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <com.jenzz.materialpreference.PreferenceCategory android:title="@string/category_appearance">
        <com.jenzz.materialpreference.CheckBoxPreference
            android:defaultValue="false"
            android:key="@string/key_pref_dark_theme"
            android:summaryOff="@string/summary_pref_dark_theme_disabled"
            android:summaryOn="@string/summary_pref_dark_theme_enabled"
            android:title="@string/title_pref_dark_theme"/>
    </com.jenzz.materialpreference.PreferenceCategory>

    <com.jenzz.materialpreference.PreferenceCategory android:title="Notifications">
        <com.jenzz.materialpreference.CheckBoxPreference
            android:defaultValue="true"
            android:key="notifications_enabled"
            android:title="Enable notifications"/>

        <com.jenzz.materialpreference.Preference
            android:dependency="notifications_enabled"
            android:summary="08:00"
            android:key="notification_time"
            android:title="Time"/>
    </com.jenzz.materialpreference.PreferenceCategory>

    <com.jenzz.materialpreference.PreferenceCategory android:title="@string/category_about">
        <com.jenzz.materialpreference.Preference
            android:key="rate_app"
            android:selectable="true"
            android:title="@string/title_pref_rate_app"/>

        <com.jenzz.materialpreference.Preference
            android:key="@string/key_pref_build_version"
            android:selectable="false"
            android:title="@string/title_build_version"/>
    </com.jenzz.materialpreference.PreferenceCategory>

</PreferenceScreen>