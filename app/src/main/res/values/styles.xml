<resources>

    <!-- Base application theme. -->
    <style name="Base.V0.AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>

    <style name="Base.V0.AppTheme.Drawer" parent="Base.V0.AppTheme">
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="AppTheme" parent="Base.V0.AppTheme" />

    <style name="AppTheme.Drawer" parent="Base.V0.AppTheme.Drawer" />

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@style/Toolbar.Popup</item>
    </style>

    <style name="Toolbar.Popup" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/accent</item>
    </style>
</resources>
